{
	"name": "remotetrash",
	"displayName": "Remote Trash",
	"icon": "res/Zwyx-220x220-rounded.webp",
	"description": "Move files to trash in dev containers.",
	"version": "0.0.1",
	"publisher": "zwyx",
	"repository": "github:zwyx/vscode-remotetrash",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"extensionKind": [
		"workspace"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Remote Trash",
			"properties": {
				"remotetrash.trashCliPath": {
					"type": "string",
					"default": "trash",
					"description": "Path or command for the trash CLI executable. Defaults to 'trash'."
				}
			}
		},
		"commands": [
			{
				"command": "remotetrash.delete",
				"title": "Delete"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "remotetrash.delete",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"command": "remotetrash.delete",
					"when": "remoteName && !explorerResourceIsRoot && !explorerResourceMoveableToTrash",
					"group": "7_modification@17"
				}
			]
		},
		"keybindings": [
			{
				"command": "-deleteFile",
				"key": "delete",
				"mac": "cmd+backspace",
				"when": "filesExplorerFocus && foldersViewVisible && !explorerResourceMoveableToTrash && !inputFocus"
			},
			{
				"command": "remotetrash.delete",
				"key": "delete",
				"mac": "cmd+backspace",
				"when": "remoteName && filesExplorerFocus && foldersViewVisible && !explorerResourceMoveableToTrash && !inputFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"build": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"test": "vscode-test",
		"lint": "eslint src --report-unused-disable-directives --max-warnings 0",
		"prettier": "prettier -w .",
		"postversion": "res/convert-annotated-tag-to-lightweight.sh",
		"package": "vsce package",
		"vscode:publish": "vsce publish",
		"openvsx:publish": "ovsx publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.105.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.25.10",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-only-warn": "^1.1.0",
		"npm-run-all": "^4.1.5",
		"ovsx": "^0.10.6",
		"prettier": "3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3"
	}
}
